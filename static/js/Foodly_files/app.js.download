const Loading = {template: '<loading-view></loading-view>'}
const Homepage = {template: '<homepage-view></homepage-view>'}
const BuyerRestaurants = {template: '<buyer-restaurants-view></buyer-restaurants-view>'}
const Restaurant = {template: '<restaurant-view></restaurant-view>'}

const routes = [
    {path: '/', name: 'loading', component: Loading},
    {path: '/homepage', name: 'homepage', component: Homepage},
    {path: '/buyerRestaurants', name: 'buyerRestaurants', component: BuyerRestaurants},
    {path: '/restaurant/:name', name: 'restaurant', component: Restaurant}
]

const router = new VueRouter({
    mode: 'hash',
    routes: routes
})

var app = new Vue({
    router,
    el: "#app"
})